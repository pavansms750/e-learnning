<%= simple_form_for @profile,  html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :dob,  {:order => [:day, :month, :year], :value => Time.now, :prompt => true, :start_year => 1970, :end_year => Time.now.year} %>
    <%= f.input :mob %>
    <p>
    <%= image_tag(current_user.profile.image.url, height:150, width:150) if current_user.profile.image? %>
      <label>
      <%= f.check_box :remove_image %>
      Remove Image
    </label>
  </p>

  <p>
  <%= f.file_field :image, accept: "image/*", class: "btn btn-sm text-center" %>
    
  </p>
  
   <p>
    <%= image_tag(current_user.profile.cover.url, height:150, width:250) if current_user.profile.cover? %>
      <label>
      <%= f.check_box :remove_cover %>
      Remove Image
    </label>
  </p>

  <p>
    CoverImage:
  <%= f.file_field :cover, accept: "image/*", class: "btn btn-sm text-center" %>
    
  </p>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
