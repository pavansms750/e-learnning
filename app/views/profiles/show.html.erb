<p id="notice"><%= notice %></p>
<div class="col-md-12" style="background-color:lightcyan;">

   <div class="parent">
     <% if @profile.cover.present? %>
       <%= image_tag @profile.cover, height:150, width:500, class:"style_image" %>
     <% else %>
      <%= image_tag "cover.jpg", height:150, width:500, class:"style_image" %>
    <% end %>
  <div class="child">
     <% if @profile.image.present? %>
  <%= image_tag @profile.image, height:80, width:80, class:"style_image" %>
  <% else %>
    <%= image_tag "images.png", height:80, width:80, class:"style_image" %>
    <% end %>
  </div>
</div>
<br />
<p> </p>
<p>
  <strong>Name:</strong>
  <%= @profile.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @profile.address %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @profile.dob %>
</p>

<p>
  <strong>Mob:</strong>
  <%= @profile.mob %>
</p>


<div class="btn-group">
<%= link_to 'Edit', edit_profile_path(@profile), class:"btn btn-primary active" %> 
<%= link_to 'Back', courses_path, class:"btn btn-success active" %>
</div>
</div>