<p id="notice"><%= notice %></p>

  <font size="6" color="blue"> Listing Units</font>
   <%= link_to new_course_unit_path(@course), class:"pull-right" do %>
   <i class="fa fa-plus fa-2x">AddUnit</i>
   <% end %>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
       
       <td> <%= link_to "Show", course_unit_path(@course, unit) %></td>
        <% if user_signed_in? %>
		    <% if unit.user_id == current_user.id %>
       <td> <%= link_to "Edit", edit_course_unit_path(unit.course, unit) %></td>
        <td><%= link_to "Delete", course_unit_path(@course, unit), method: :delete, data: { confirm: "Are you sure?" } %> </td>
        <% end %>
        <% end %>
    <% end %>
  </tbody>
</table>