 <div class="col-sm-5 col-sm-offset-4 col-md-6 col-md-offset-3" style="background-color:lightcyan;">
    <font size="6" color="blue"> Log In </font>
  <%= link_to new_user_registration_path, class:"pull-right" do %>
   <i class="fa fa-user fa-2x">SignUp</i>
   <% end %>
 <br />
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>


</div>