<%= simple_form_for([@course, @course.units.build]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, placeholder:"Enter Unit Name", require: true%>
    <p>Choose a Video File: </p>
    <%= f.file_field :video, accept:"video/*" %>
    
  </div>
  <br />

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
